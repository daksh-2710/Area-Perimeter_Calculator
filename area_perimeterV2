import math
def rectangle(length, width):
    area = length * width
    perimeter = 2 * (length + width)
    return area, perimeter
def square(sides):
    area = sides * sides
    perimeter = 4 * (sides)
    return area, perimeter
def circle(radius):
    area = math.pi * radius ** 2
    perimeter = 2 * math.pi * radius
    return area, perimeter
def parallelogram(base, height):
    area = base * height
    perimeter = 2 * (base + height)
    return area, perimeter
def triangle_area(base, height):
    area = 1/2 * base * height
    return area
def triangle_perimeter(side1, side2, side3):
    perimeter = side1 + side2 + side3
    return perimeter

ask = input("What shape: ").lower()
if ask == "rectangle":
    lenght = float(input("Enter length: "))
    width = float(input("Enter width: "))
    area, perimeter = rectangle(lenght, width)
    print()
elif ask == "square":
    side = float(input("Enter side: "))
    area, perimeter = square(side)
    print()
elif ask == "circle":
    radius = float(input("Enter radius: "))
    area, perimeter = circle(radius)
    print()
elif ask == "parallelogram":
    bas = float(input("Enter base: "))
    heigh = float(input("Enter height: "))
    area, perimeter = parallelogram(bas, heigh)
    print()
elif ask == "triangle":
    print("--For Area--")
    base = float(input("Enter base: "))
    height = float(input("Enter height: "))
    print("--For Perimeter--")
    side1 = float(input("Enter side 1: "))
    side2 = float(input("Enter side 2: "))
    side3 = float(input("Enter side 3: "))
    area = triangle_area(base, height)
    perimeter = triangle_perimeter(side1, side2, side3)
    print()

print("---Your Answers---")
print("Area: ", area)
print("Perimeter: ", perimeter)